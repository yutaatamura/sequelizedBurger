<div class="container burger rounded">
    <div class="row">
        <div class="col-md-6">
            <h3>Burgers to Eat!</h3>
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>

        <div class="col-md-6">
            <h3>Devoured:</h3>
                <table>
                    {{#each burgers}}
                        {{#if this.devoured}}
                            {{> burgers/devoured-block}}
                        {{/if}}
                    {{/each}}
                </table>
        </div>

    </div>
</div>
